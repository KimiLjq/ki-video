<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stu.video.mapper.VideoDao">

    <resultMap id="BaseResultMap" type="com.stu.video.entity.Video">
        <!--@Table video-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="cover" column="cover" jdbcType="VARCHAR" />
        <result property="poster" column="poster" jdbcType="VARCHAR"/>
        <result property="videoUrl" column="video_url" jdbcType="VARCHAR"/>
        <result property="audioId" column="audio_id" jdbcType="INTEGER"/>
        <result property="isUcg" column="is_ucg" jdbcType="INTEGER"/>
        <result property="type" column="type" jdbcType="VARCHAR"/>
        <result property="firstType" column="first_type" jdbcType="VARCHAR"/>
        <result property="secondType" column="second_Type" jdbcType="VARCHAR"/>
        <result property="videoDesc" column="video_desc" jdbcType="VARCHAR"/>
        <result property="videoSecond" column="video_second" jdbcType="INTEGER"/>
        <result property="videoHeight" column="video_height" jdbcType="INTEGER"/>
        <result property="videoWidth" column="video_width" jdbcType="INTEGER"/>
        <result property="amount" column="amount" jdbcType="INTEGER"/>
        <result property="likeCount" column="like_count" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, user_id, title, cover, poster, video_url, audio_id, is_ucg, type, first_type, second_Type,
        video_desc, video_second, video_height, video_width, amount, like_count, create_time
    </sql>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from myshortvideo.video
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from myshortvideo.video
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from myshortvideo.video
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="title != null and title != ''">
                and title = #{title}
            </if>
            <if test="cover != null and cover != ''">
                and cover = #{cover}
            </if>
            <if test="poster != null and poster != ''">
                and poster = #{poster}
            </if>
            <if test="videoUrl != null and videoUrl != ''">
                and video_url = #{videoUrl}
            </if>
            <if test="audioId != null">
                and audio_id = #{audioId}
            </if>
            <if test="isUcg != null">
                and is_ucg = #{isUcg}
            </if>
            <if test="type != null and type != ''">
                and type = #{type}
            </if>
            <if test="firstType != null and firstType != ''">
                and first_type = #{firstType}
            </if>
            <if test="secondType != null and secondType != ''">
                and second_Type = #{secondType}
            </if>
            <if test="videoDesc != null and videoDesc != ''">
                and video_desc = #{videoDesc}
            </if>
            <if test="videoSecond != null">
                and video_second = #{videoSecond}
            </if>
            <if test="videoHeight != null">
                and video_height = #{videoHeight}
            </if>
            <if test="videoWidth != null">
                and video_width = #{videoWidth}
            </if>
            <if test="amount != null">
                and amount = #{amount}
            </if>
            <if test="likeCount != null">
                and like_count = #{likeCount}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into myshortvideo.video(user_id, title, cover, poster, video_url, audio_id, is_ucg, type, first_type, second_Type, video_desc, video_second, video_height, video_width, amount, like_count, create_time)
        values (#{userId}, #{title}, #{cover}, #{poster}, #{videoUrl}, #{audioId}, #{isUcg}, #{type}, #{firstType}, #{secondType}, #{videoDesc}, #{videoSecond}, #{videoHeight}, #{videoWidth}, #{amount}, default, default)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update myshortvideo.video
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="cover != null and cover != ''">
                cover = #{cover},
            </if>
            <if test="poster != null and poster != ''">
                poster = #{poster},
            </if>
            <if test="videoUrl != null and videoUrl != ''">
                video_url = #{videoUrl},
            </if>
            <if test="audioId != null">
                audio_id = #{audioId},
            </if>
            <if test="isUcg != null">
                is_ucg = #{isUcg},
            </if>
            <if test="type != null and type != ''">
                type = #{type},
            </if>
            <if test="firstType != null and firstType != ''">
                first_type = #{firstType},
            </if>
            <if test="secondType != null and secondType != ''">
                second_Type = #{secondType},
            </if>
            <if test="videoDesc != null and videoDesc != ''">
                video_desc = #{videoDesc},
            </if>
            <if test="videoSecond != null">
                video_second = #{videoSecond},
            </if>
            <if test="videoHeight != null">
                video_height = #{videoHeight},
            </if>
            <if test="videoWidth != null">
                video_width = #{videoWidth},
            </if>
            <if test="amount != null">
                amount = #{amount},
            </if>
            <if test="likeCount != null">
                like_count = #{likeCount},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from myshortvideo.video where id = #{id}
    </delete>

    <select id="queryHotspot" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from myshortvideo.video
        order by amount desc
        limit #{num}
    </select>

    <select id="queryVideosByCategory" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from myshortvideo.video
        <where>
            <if test="firstType != null and firstType != ''">
                and first_type = #{firstType}
            </if>
            <if test="secondType != null and secondType != ''">
                and second_type = #{secondType}
            </if>
        </where>
    </select>

</mapper>